default_platform :ios

platform :ios do

  before_all do
    puts "Doin' some fastlane..."
  end

  desc "Runs all the specs"
  lane :specs do
    scan(scheme: "Swizzlean",
         clean: true,
         configuration: "Debug",
         output_style: "rspec",
         code_coverage: true)

    scan(scheme: "Swizzlean IntegrationSpecs",
         configuration: "Debug",
         output_style: "rspec",
         code_coverage: false)
  end

  after_all do |lane|
    if lane.equal? :test
      puts "ðŸŒ® ðŸŒ® ðŸŒ®  Taco Time!  ðŸŒ® ðŸŒ® ðŸŒ®"
    end
  end

  error do |lane, exception|
    puts "uh oh...."
  end

end
